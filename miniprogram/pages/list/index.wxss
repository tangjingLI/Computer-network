.blur-bg {
  filter: blur(10rpx);
  overflow: hidden;
  animation: ani-blur 1000ms;
}


/* 目标列表 */
.project-container {
  margin: 0 40rpx;
  margin-top: 10rpx;
  margin-bottom: 200rpx;
}

.project-container > .count {
  color: #4F3C75;
  font-weight: bold;
  font-size: 28rpx;
}

.project-container > .count > .num {
  display: inline-block;
  margin: 0 4rpx;
  color: #FF9F23;
  font-weight: bolder;
  font-size: 32rpx;
}

.project {
  margin: 24rpx 0;
  padding: 24rpx;
  border-radius: 18rpx;
  background-color: #fff;
  box-shadow: 0 6rpx 24rpx rgba(25, 118, 210, 0.08);
}

.project > .title {
  font-weight: bold;
  font-size: 32rpx;
  color:#4F3C75;
}

.project > .tags {
  display: flex;
  margin-top: 6rpx;
}

.project > .tags > m-tag {
  margin-left: 16rpx;
}

.project > .tags > m-tag:first-child {
  margin-left: 0;
}

/* 当前记录提示 */
.timer-tips {
  margin: 0 40rpx;
  background-color: #FF9F23;
  font-size: 28rpx;
  border-radius: 18rpx;
  padding: 20rpx 24rpx;
  color: #555;
  animation: tip-ani 2s infinite ease-in-out;
  box-shadow: 0 6rpx 24rpx rgba(25, 118, 210, 0.08);
}

.timer-tips > .timer-detail {
  display: flex;
  align-items: center;
}

.timer-tips .timer {
  font-size: 32rpx;
  font-weight: bold;
  color: #4F3C75;
  margin-top: 6rpx;
  letter-spacing: 2rpx;
}

.timer-tips > .timer-detail > .timer-goal-title {
  display: inline-block;
  font-weight: bold;
  color: #4F3C75;
  margin: 0 8rpx;
}

.timer-tips > .timer-detail > .check-timer {
  margin-left: auto;
  background-color: #fff;
  color: #4F3C75;
  padding: 5rpx 16rpx;
  font-weight: bold;
  border-radius: 24rpx;
  font-size: 24rpx;
  flex-shrink: 0;
}

@keyframes tip-ani {
  0% {
    background-color: #FF9F23;
  }
  70% {
    background-color: #FF9F23;
  }
  100% {
    background-color: #FF9F23;
  }
}

@keyframes ani-blur {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}


/* 加载 */
.loading {
  margin-top: 100rpx;
}
