.tips-container {
  margin: 20px 40rpx;
  background-color: #FF9F23;
  font-size: 28rpx;
  border-radius: 18rpx;
  padding: 20rpx 24rpx;
  color: #c4c1b4;
  box-shadow: 0 6rpx 24rpx rgba(25, 118, 210, 0.08);
  display: flex;
  align-items: center;
  animation: ani 2s infinite ease-in-out;
}

.tips-container > .info > .warn {
  font-size: 26rpx;
  color: #666;
}

.tips-container > .info > .tips {
  font-size: 30rpx;
  font-weight: bold;
  color: #000;
  margin-top: 2rpx;
}

.tips-container > image {
  width: 56rpx;
  height: 56rpx;
  margin-right: 32rpx;
  align-self: flex-start;
}

@keyframes ani {
  0% {
    background-color: #FF9F23;
  }
  70% {
    background-color: #FF9F23;
  }
  100% {
    background-color: #FF9F23;
  }
}